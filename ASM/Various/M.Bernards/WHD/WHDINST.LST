' Installation fÅr WHD.TOS Ω`89 by M.Bernards
whd$="WHD.TOS"
IF NOT EXIST(whd$)
  FILESELECT DIR$(0)+"\*.TOS",whd$,whd$
ENDIF
IF whd$=""
  END
ENDIF
OPEN "U",#1,whd$
SEEK #1,201
w1&=INP(#1)
SEEK #1,217
w2&=INP(#1)
SEEK #1,301
dma&=INP(#1)
SEEK #1,369
drv&=SHR(INP(#1),5)
PRINT "Installation fÅr WHD. Ω 1989 by Michael Bernards"
PRINT "Alte DMA-Device ";SHR(dma&,5);" Alte Drivenummer ";drv&
PRINT "1. Warteschleife ";w1&;"/200Hz Takte, 2. Warteschleife ";w2&;"/200hz Takte"
INPUT "DMA-Devive   ? ",dma&
INPUT "Drive-Nummer ? ",drv&
INPUT "1. Warteschleife ? ",w1&
INPUT "2. Warteschleife ? ",w2&
SEEK #1,201
OUT #1,w1&
SEEK #1,217
OUT #1,w2&
SEEK #1,301
OUT #1,dma&*32
SEEK #1,369
OUT #1,drv&*32
CLOSE #1
END
