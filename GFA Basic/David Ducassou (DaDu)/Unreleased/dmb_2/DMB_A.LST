  NEXT i&
  CLOSE #1
RETURN
'
FUNCTION crypt$(chaine$)        !  add 1 to ASC
  LOCAL i&
  '
  new_chaine$=""
  FOR i&=1 TO LEN(chaine$)
    new_c$=MID$(chaine$,i&,1)
    new_chaine$=new_chaine$+CHR$(ASC(new_c$)+1)
  NEXT i&
  '
  RETURN new_chaine$
ENDFUNC
FUNCTION uncrypt$(chaine$)        !  sub 1 to ASC
  LOCAL i&
  '
  new_chaine$=""
  FOR i&=1 TO LEN(chaine$)
    new_c$=MID$(chaine$,i&,1)
    new_chaine$=new_chaine$+CHR$(ASC(new_c$)-1)
  NEXT i&
  '
  RETURN new_chaine$
ENDFUNC
