> PROCEDURE gag_txt
  gag%=RANDOM(3)
  IF gag%=0
    gag_txt$="brul‚ vif"
  ELSE IF gag%=1
    gag_txt$="blast‚"
  ELSE IF gag%=2
    gag_txt$="vir‚"
  ELSE IF gag%=3
    gag_txt$="noy‚"
  ENDIF
RETURN
> PROCEDURE do_gag_1
  gag_txt
  ALERT 0,"Le bip a ‚t‚ |"+gag_txt$+".",1,"ok",dummy%
RETURN
> PROCEDURE do_gag_2
  gag_txt
  ALERT 0,"Le texte a ‚t‚ |"+gag_txt$+".",1,"ok",dummy%
RETURN
