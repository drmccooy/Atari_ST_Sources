> PROCEDURE aff_bien(ch$)
  '
  LOCAL ch%,ch2$,col_max%
  '
  col_max%=39
  ch%=LEN(ch$)
  IF ch%>col_max%
    '
    '
    t
    PRINT LEFT$(ch$,col_max%)
    t
    '
    '
    ch2$=RIGHT$(ch$,ch%-col_max%)
    ch2%=LEN(ch2$)
    '
  couper_encore:
    '
    IF ch2%>=col_max%
      PRINT LEFT$(ch2$,col_max%);
      ch2$=RIGHT$(ch2$,ch2%-col_max%)
      ch2%=LEN(ch2$)
      '
      t
      GOTO couper_encore
      '
    ELSE
      PRINT ch2$;
    ENDIF
  ELSE
    PRINT ch$
  ENDIF
  VTAB 20
  PRINT "FINI"
  t
RETURN
> PROCEDURE t
  t=INP(2)
  t$=CHR$(t)
RETURN
