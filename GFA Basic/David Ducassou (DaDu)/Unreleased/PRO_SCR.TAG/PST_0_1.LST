'
'       PRO-SCREEN-TAGS
'
'       v0.1
'
'
coordonees!=TRUE
pixel%=2        !       taille du plot, ajouter 1
couleur%=0
'
nb%=10000
DIM donnees_x%(nb%),donnees_y%(nb%)
donnees%=0
'
path$="F:\"
'
IF XBIOS(4)<>0
  ALERT 1,"|Je pr‚fererais la |basse r‚solution...",1,"Ah...",dummy%
ENDIF
'
CLS
DEFMOUSE 5
'
dessiner:
SHOWM
DRAW 0,0 TO 319,0 TO 319,199 TO 0,199 TO 0,0
DO
  '
  MOUSE xm%,ym%,bouton%
  '
  IF coordonees!=TRUE
    INC c_pour_quand%
    IF c_pour_quand%>=35
      PRINT AT(1,1);xm%;" ";ym%;"     ";donnees%;" "
      c_pour_quand%=0
      SHOWM
    ENDIF
  ENDIF
  '
  IF bouton%=1
    donnees_x%(donnees%)=xm%
    donnees_y%(donnees%)=ym%
    INC donnees%
    '
    GOSUB effet
    '
  ENDIF
  '
  tt
  IF t%<>0
    IF t%=27
      EDIT
    ENDIF
    IF t$=" "
      GOTO options
    ENDIF
  ENDIF
  '
LOOP
'
'
'
'
'
'
'
'
'
options:
'
SGET ecran$
'
old_pixel%=pixel%
'
aff_options:
CLS
PRINT "          PRO-SCREEN-TAGS  v0.1"
PRINT "          ---------------------"
PRINT "            Par DAVID DUCASSOU"
REPEAT
  LOCATE 1,6
  PRINT "+ et -  Taille du point = ";pixel%+1;" "
  PRINT "( et )  Couleur         = ";couleur%;" "
  PRINT
  PRINT "  E     Effacer l'animation"
  PRINT "  S     Sauver l'animation"
  PRINT
  PRINT "ESPACE  Retour au dessin"
  PRINT " F10    Quitter"
  '
  t
  t$=UPPER$(t$)
  '
  IF t$="+"
    INC pixel%
  ENDIF
  IF t$="-"
    DEC pixel%
    IF pixel%<0
      pixel%=0
    ENDIF
  ENDIF
  '
  IF t$="("
    DEC couleur%
    IF couleur%<0
      couleur%=0
    ENDIF
    COLOR couleur%
  ENDIF
  IF t$=")"
    INC couleur%
    IF couleur%>15
      couleur%=15
    ENDIF
    COLOR couleur%
  ENDIF
  '
  IF t$="S"
    GOTO sauve_anim
  ENDIF
  IF t$="E"
    ALERT 1,"Veuillez confirmer",1,"EFFACER|Annuler",dummy%
    IF dummy%=1
      CLS
      SGET ecran$
      PRINT "Effacement en cours..."
      FOR i%=0 TO donnees%
        donnees_x%(i%)=0
        donnees_y%(i%)=0
      NEXT i%
      donnees%=0
      GOTO aff_options
    ENDIF
  ENDIF
  '
  IF t%=196                   !       F10
    EDIT
  ENDIF
  '
UNTIL t$=" "
'     *** maintenant on pr‚voit pour le replay
IF pixel%<>old_pixel%
  donnees_x%(donnees%)=333            !       change taille du "pixel"
  donnees_y%(donnees%)=pixel%
  INC donnees%
ENDIF
'
SPUT ecran$
'
GOTO dessiner
'
'       ******
'
sauve_anim:
'
IF donnees%>0
  CLS
  PRINT "Dur‚e = ";donnees%
  PRINT "          SAUVER SOUS QUEL NOM ?"
  PRINT "  ( je rajouterai l'extension .LST )"
  '
  FILESELECT path$+"*.LST","",file_to_save$
  '
  IF file_to_save$<>""
    '
    IF RIGHT$(file_to_save$,4)<>".LST"
      file_to_save$=file_to_save$+".LST"
    ENDIF
    '
    CLS
    PRINT file_to_save$
    PRINT "Sauvegarde en cours..."
    '
    OPEN "O",#1,file_to_save$
    '
    '
    FOR i2%=0 TO donnees%
      '
      PRINT AT(5,5);donnees%-i2%;" "
      '
      c_data$="DATA "+STR$(donnees_x%(i2%))+","+STR$(donnees_y%(i2%))
      INC i2%
      '
      FOR i%=i2% TO i2%+6
        '
        c_data$=c_data$+","+STR$(donnees_x%(i%))
        c_data$=c_data$+","+STR$(donnees_y%(i%))
        '
      NEXT i%
      ADD i2%,6
      '
      PRINT #1,c_data$
      '
    NEXT i2%
    '
    PRINT #1,"DATA 0,0,0,0"       !     la fin de l'anim est marqu‚ par 4 z‚ros
    '
    CLOSE #1
  ENDIF
ENDIF
GOTO aff_options
'
'       **********
> PROCEDURE effet                 !       si bouton appuy‚
  '
  PCIRCLE xm%,ym%,pixel%        !       dessine un point circulaire
  '
  ' FOR i2%=0 TO pixel%           !       dessine un point carr‚
  '    FOR i1%=0 TO pixel%
  ' PLOT xm%+i1%,ym%+i2%
  ' NEXT i1%
  ' NEXT i2%
  '
RETURN
'
> PROCEDURE t
  t%=INP(2)
  t$=CHR$(t%)
RETURN
> PROCEDURE tt
  t$=INKEY$
  t%=ASC(t$)
  '  PRINT t%
RETURN
