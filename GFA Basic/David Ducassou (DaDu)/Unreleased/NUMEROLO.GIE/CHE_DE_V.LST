'
'       Calcul du CHEMIN DE VIE
'
'       D'aprŠs  QUEL AVENIR MADAME  n56  ( dec. 90 )  p. 29
'
'       D. DUCASSOU
'
'       17.12.90
'
CLS
' GOTO raccourci
'
jour:
INPUT "JOUR DE NAISSANCE en chiffre(s)  ";jour%
IF jour%>32
  GOTO jour
ENDIF
'
PRINT
mois:
INPUT "MOIS DE NAISSANCE en chiffre(s)  ";mois%
IF mois%>12
  GOTO mois
ENDIF
'
PRINT
annee:
INPUT "ANNEE DE NAISSANCE en chiffre(s) ";annee%
IF annee%<100
  GOTO annee
ENDIF
'
total_jma%=jour%+mois%+annee%
'
' raccourci:
' total_jma%=1991
'
total_jma$=STR$(total_jma%)
'
'       ****** 1 ******         1990 devient 19  ( 1 + 9 + 9 + 0 )
IF LEN(total_jma$)>1
  total_jma%=0
  FOR i%=1 TO LEN(total_jma$)
    l_g$=MID$(total_jma$,i%,1)
    '
    l_g%=VAL(l_g$)
    '
    total_jma%=total_jma%+l_g%
  NEXT i%
  total_jma$=STR$(total_jma%)
ENDIF
total_jma%=VAL(total_jma$)
'
'       ****** 2 *******        19 devient 10     ( 1 + 9 )
IF LEN(total_jma$)>1
  total_jma%=0
  FOR i%=1 TO LEN(total_jma$)
    l_g$=MID$(total_jma$,i%,1)
    '
    l_g%=VAL(l_g$)
    '
    total_jma%=total_jma%+l_g%
  NEXT i%
  total_jma$=STR$(total_jma%)
ENDIF
'
total_jma%=VAL(total_jma$)
'
'       ******* 3 *******       10 devient 1   ( 1 + 0 )
IF LEN(total_jma$)>1
  total_jma%=0
  FOR i%=1 TO LEN(total_jma$)
    l_g$=MID$(total_jma$,i%,1)
    '
    l_g%=VAL(l_g$)
    '
    total_jma%=total_jma%+l_g%
  NEXT i%
  total_jma$=STR$(total_jma%)
ENDIF
'
cdv%=VAL(total_jma$)
'
CLS
PRINT "Votre  CHEMIN DE VIE  est le "
PRINT
PRINT "             ";cdv%
'
~INP(2)
