PROCEDURE dir_recherche(f$,prof%)
  LOCAL a$,f2$,dta$,adr%,a%
  '
  dta$=SPACE$(44)
  adr%=V:dta$
  ~FSETDTA(adr%)
  f2$=f$+"\*.*"+CHR$(0)
  a%=FSFIRST(f2$,-1)
  GOSUB dir_recherche__analyse_de_la_dta
  WHILE a%=0
    a%=FSNEXT()
    GOSUB dir_recherche__analyse_de_la_dta
  WEND
RETURN
'
PROCEDURE dir_recherche__analyse_de_la_dta
  '
  ' oy%=CRSLIN                    !       Attendre l'appui d'1 touche si le txt
  ' IF oy%=25                     !       d‚passe 24 lignes.
  '    dummy%=INP(2)
  '   CLS
  ' ENDIF
  '
  a$=""
  FOR i=adr%+30 TO adr%+43
    EXIT IF PEEK(i)<=32
    a$=a$+CHR$(PEEK(i))
    POKE i,32
  NEXT i
  '
  '     Est-ce un FICHIER ?
  '
  IF (PEEK(adr%+21)<>16) AND (a$<>"") AND (a$<>".") AND (a$<>"..")
    file$=LEFT$(f2$,LEN(f2$)-4)+a$
    '    PRINT file$
    ext$=RIGHT$(file$,3)
    IF ext$="LZH"
      @take_it
    ELSE IF ext$="ARC"
      @take_it
    ELSE IF ext$="ZIP"
      @take_it
    ENDIF
    '   Et .ZOO  ?
    '
  ENDIF
  '
  '     Est-ce un DOSSIER ?
  '
  IF (PEEK(adr%+21)=16) AND (a$<>"") AND (a$<>".") AND (a$<>"..")
    @dir_recherche(f$+"\"+a$,prof%+1)
    ~FSETDTA(adr%)
  ENDIF
RETURN
PROCEDURE take_it
  INC pos_file&
  archives_files$(pos_file&)=file$
  PRINT file$
RETURN
PROCEDURE t
  t%=INP(2)
  t$=UPPER$(CHR$(t%))
RETURN
