REPEAT
  t
  '
  '
  IF t$="Q" OR t%=17 OR t%=3 OR t%=158
    CLS
    RESERVE -1
    EDIT
  ENDIF
  IF t$="5"
    GOTO ch_buffer
  ENDIF
  IF t$="D" OR t%=226
    GOTO auteur
  ENDIF
  '
  IF t$="1"
    PRINT
    INPUT "New source pathname   >",path_s$
    GOTO menu
  ENDIF
  IF t$="2"
    PRINT
    INPUT "New source pathname   >",path_d$
    GOTO menu
  ENDIF
  IF t$="4"
    IF sav_kb!=TRUE
      sav_kb!=FALSE
    ELSE
      sav_kb!=TRUE
    ENDIF
    GOTO menu
  ENDIF
  '
UNTIL t$=" "
