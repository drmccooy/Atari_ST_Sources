cont:
CLS
PRINT "      File to depack"
FILESELECT path_s$,"",file$
IF file$=""
  GOTO menu
ENDIF
'
CLS
PRINT "      Depacked file to save"
FILESELECT path_d$,"",file_dest$
IF file_dest$=""
  GOTO menu
ENDIF
