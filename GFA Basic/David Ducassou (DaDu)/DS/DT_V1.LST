CLS
PRINT " JE CHARGE LES DONNEES DU FICHIER :"
PRINT
PRINT "            DT.DAT"
modifs=FALSE
'
OPEN "I",#1,"DT.DAT"                   !  charge les donn‚es
INPUT #1,d1$
DATE$=d1$
PRINT DATE$      !
INPUT #1,d2$
TIME$=d2$
PRINT TIME$      !
CLOSE #1
'
prg:
CLS
PRINT "    R‚alis‚ par DAD 20 janvier 1990"
PRINT
RESERVE 10000
m$=DATE$+" "+TIME$
ALERT 0,m$+"|ENTRER QUEL PARAMETRE ? ",1,"DATE|HEURE|FIN",c
IF c<>3
  IF c=1
    j$="22"
    m$="04"
    a$="87"
    INPUT "JOUR ";j$
    INPUT "MOIS ";m$
    INPUT "ANNEE ";a$
    DATE$=j$+"."+m$+"."+a$
    modifs=TRUE
  ELSE
    INPUT "HEURES ";h$
    INPUT "MINUTES ";m$
    c$="00"
    TIME$=h$+m$+c$
    modifs=TRUE
  ENDIF
ELSE
  IF modifs=TRUE
    CLS
    PRINT " JE SAUVE LA DATE ET L'HEURE..."
    OPEN "O",#1,"DT.DAT"                  ! SAUVE LES PARAMETRES
    PRINT #1,DATE$
    PRINT #1,TIME$
    CLOSE #1
  ENDIF
  END
ENDIF
GOTO prg
