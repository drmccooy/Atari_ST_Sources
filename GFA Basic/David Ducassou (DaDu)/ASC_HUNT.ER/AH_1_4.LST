'       v1.4
'
'
'
IF XBIOS(4)=0
  ALERT 3,"ASCII HUNTER by DADU. | |Please, |Increase resolution ! ",1," QUIT ",dummy%
  EDIT
ENDIF
'
RESERVE 20000
'
buffer_sect$=SPACE$(1500)
'
background_black!=FALSE
'
ligne_vide$=STRING$(79," ")
petit_vide$=STRING$(45," ")
'
piste%=0
secteur%=1
face%=0
sectors_nbr&=9
tracks_nbr&=79
' creator_present!=TRUE
creator_present!=FALSE
'
pos_c%=2                                !       position du curseur
'
DIM tt$(10)                             !       texte type
tt$(1)="to"
tt$(2)="you"
tt$(3)="for"
tt$(4)="by"
tt$(5)="tos"
tt$(6)="if"
tt$(7)="prg"
tt$(8)="did"
tt$(9)="the"
tt$(10)="that"
'
'
' GOTO no_specials_words
' tt$(1)="MASTER"
' tt$(2)="YO"
' tt$(3)="HARD"
' t$(4)="BOUTON"
' tt$(5)="AAA"
' tt$(6)="AAA"
' tt$(7)="AAA"
' tt$(8)="AAA"
' tt$(9)="AAA"
' tt$(10)="AAA"
' no_specials_words:
'
PRINT CHR$(27);"v";             !       d‚passement de texte autoris‚
'
aff_parametres_1
aff_parametres_2
aff_infos_keys
'
PRINT AT(1,4);" "
FOR i|=1 TO 15
  PRINT "    Press HELP for more informations"
NEXT i|
IF creator_present!=FALSE
  PRINT AT(1,23);"This soft cost ONLY 30 FFR, BUY IT !!!  (HELP for infos.)"
ENDIF
'
'
REPEAT
  t
  IF t=203 AND pos_c%>1
    DEC pos_c%
  ENDIF
  IF t=205 AND pos_c%<5
    INC pos_c%
  ENDIF
  '
  IF t=200                              !       fl‚che haut
    IF pos_c%=1 AND piste%<84
      INC piste%
    ENDIF
    IF pos_c%=2 AND secteur%<sectors_nbr&
      INC secteur%
    ENDIF
    IF pos_c%=3
      IF face%=0
        face%=1
      ELSE
        face%=0
      ENDIF
    ENDIF
    IF pos_c%=4
      INC sectors_nbr&
      IF sectors_nbr&>11
        sectors_nbr&=11
      ENDIF
    ENDIF
    IF pos_c%=5
      INC tracks_nbr&
      IF tracks_nbr&>85
        tracks_nbr&=85
      ENDIF
    ENDIF
  ENDIF
  '
  IF t=208                              !             bas
    IF pos_c%=1 AND piste%>0
      DEC piste%
    ENDIF
    IF pos_c%=2 AND secteur%>1
      DEC secteur%
    ENDIF
    IF pos_c%=3
      IF face%=0
        face%=1
      ELSE
        face%=0
      ENDIF
    ENDIF
    IF pos_c%=4
      DEC sectors_nbr&
      IF sectors_nbr&<1
        sectors_nbr&=1
      ENDIF
    ENDIF
    IF pos_c%=5
      DEC tracks_nbr&
      IF tracks_nbr&<0
        tracks_nbr&=0
      ENDIF
    ENDIF
  ENDIF
  '
  IF t=210                                      !       insert
    IF face%=0
      face%=1
    ELSE
      face%=0
    ENDIF
  ENDIF
  '
  '
  IF t$=" "
    GOSUB read_secteur
    '    aff_secteur
    GOSUB cherche
    GOSUB info_vide
    IF g_trouve_quelque_chose!=TRUE
      PRINT AT(1,23);"I have found some words:  ";truc$
    ENDIF
    GOSUB aff_secteur
  ENDIF
  '
  IF t=226        !       help
    help
  ENDIF
  '
  '   ******************  PASSAGE EN VERS. NON LIMITEE  *******************
  IF t=4          !   CONTROL D
    CLS
    FOR i|=1 TO 70
      PRINT "ceoratreoracratoorractroacro";
    NEXT i|
    INPUT "",code$ !  CREATOR
    code$=UPPER$(code$)
    IF LEFT$(code$,1)="C"
      IF RIGHT$(code$,1)="R"
        IF MID$(code$,2,5)="REATO"
          creator_present!=TRUE
        ENDIF
      ENDIF
    ENDIF
    aff_parametres_1
    aff_parametres_2
    aff_infos_keys
  ENDIF
  '
  IF t=187        !       F1
    '
    '   *********************  AUTOMATIC SEARCH  **********************
    '
    abort!=FALSE
    pos_c%=0
    GOSUB aff_parametres_2
    PRINT AT(1,23);"[ ] Reading sector       [ ] Searching ASCII words"
  ch_s_le_dsk:
    PRINT AT(11,2);"Sector: ";secteur%;" "
    '
    inverse_on
    PRINT AT(2,23);" "
    GOSUB read_secteur
    inverse_off
    PRINT AT(2,23);" "
    '
    GOSUB cherche
    IF g_trouve_quelque_chose!=TRUE
      '
      GOSUB aff_parametres_2
      '
      GOSUB info_vide
      PRINT AT(1,23);"I have found some words:  ";truc$
      PRINT CHR$(27)+"p";" Press anykey ... "+CHR$(27)+"q"
      GOSUB aff_secteur
    ELSE
      INC secteur%
      '
      t$=INKEY$
      IF t$=CHR$(27)
        abort!=TRUE
        GOTO end_of_search
      ENDIF
      '
      IF secteur%>sectors_nbr&
        secteur%=1
        INC piste%
        PRINT AT(1,2);"Track: ";piste%;" "
      ENDIF
      IF piste%<tracks_nbr&+1
        GOTO ch_s_le_dsk
      ELSE
        DEC piste%
        secteur%=sectors_nbr&
        GOSUB info_vide
        PRINT AT(1,24);CHR$(27)+"p";" End of this side, press anykey... "+CHR$(27)+"q"
        GOSUB flash_when_finish
        GOTO end_of_search
      ENDIF
    fin_ch:
    ENDIF
    '
    GOSUB flash_when_finish
    PRINT AT(1,24);CHR$(27)+"p";" To continue to search, press space ... "+CHR$(27)+"q"
    t
    GOSUB info_vide
    PRINT AT(50,20);"Last found:  ";piste%;",";secteur%;",";face%;"  "
    '
    IF t$=" "
      PRINT AT(1,23);"[ ] Reading sector       [ ] Searching ASCII words"
      INC secteur%
      IF secteur%>sectors_nbr&
        INC piste%
        secteur%=1
      ENDIF
      PRINT AT(1,24);ligne_vide$
      GOTO ch_s_le_dsk
    ENDIF
    '
  end_of_search:
    pos_c%=2
    aff_parametres_2
    info_vide
    PRINT AT(1,24);ligne_vide$
    IF abort!=TRUE
      info_sur_le_st("Search aborted...")
    ENDIF
    '
    '   ***********  END OF  AUTOMATIC SEARCH  *************
    '   ****************************************************
  ENDIF
  '
  '
  IF t=188      !       F2
    GOSUB infos_nbr
    aff_parametres_1
    VTAB 3
    aff_infos_keys
  ENDIF
  IF t=189      !       F3
    changer_les_mots
    aff_parametres_1
    VTAB 3
    aff_infos_keys
  ENDIF
  '
  IF t=191      !       F5
    background_black!=TRUE
    SETCOLOR 0,&H0
    SETCOLOR 3,&H555
  ENDIF
  IF t=192
    background_black!=FALSE
    SETCOLOR 0,&H555
    SETCOLOR 3,&H0
  ENDIF
  '
  GOSUB aff_parametres_2
  '
  ' pour quitter:
  ' CTRL C, ou F10, ou CTRL Q, ou ALT Q, ou Q  ou  q
  '
UNTIL t=3 OR t=196 OR t=17 OR t=158 OR t=81 OR t=113
'
fin
CLS
RESERVE -1
EDIT
'
> PROCEDURE read_secteur
  '  info_sur_le_st("Reading sector")
  ~XBIOS(8,L:V:buffer_sect$,L:0,W:0,W:secteur%,W:piste%,W:face%,W:1)
RETURN
