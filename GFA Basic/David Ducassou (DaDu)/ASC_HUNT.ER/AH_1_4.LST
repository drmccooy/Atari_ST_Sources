'
> PROCEDURE flash_when_finish
  '     D. DUCASSOU, 5/6/91
  '
  REPEAT
    '
    IF INKEY$<>""
      GOTO fast_press
    ENDIF
    VSYNC
    SETCOLOR 0,&H0
    SOUND 1,15,2,2,10
    PAUSE 10
    '
    VSYNC
    SETCOLOR 0,&H666
    SOUND 1,15,2,3,10
    PAUSE 10
  UNTIL INKEY$<>""
  SOUND 0,0,0,0,0
  '
fast_press:
  IF background_black!=TRUE
    SETCOLOR 0,&H0
    SETCOLOR 3,&H555
  ENDIF
RETURN
