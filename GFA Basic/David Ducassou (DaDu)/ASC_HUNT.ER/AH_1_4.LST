    IF rep$<>""
      IF creator_present!=FALSE
        ALERT 1,"Sorry, this limited demo |version don't allow it. |You use this soft, you |may but it !...",1," YEAH ",dummy&
      ELSE
        tt$(i%)=rep$
      ENDIF
    ENDIF
    '
