> PROCEDURE aff_secteur
  adr_a_lire%=VARPTR(buffer_sect$)
  '
  '
  '     16*16=256
  '
  FOR l%=5 TO 21
    VTAB l%
    PRINT petit_vide$
    FOR c%=5 TO 37                      !       16
      LOCATE c%,l%
      PRINT CHR$(PEEK(adr_a_lire%))
      INC adr_a_lire%
    NEXT c%
  NEXT l%
  '
RETURN
'
> PROCEDURE cherche
  '
  '  info_sur_le_st("Searching ASCII words")
  inverse_on
  PRINT AT(27,23);" "
  '
  g_trouve_quelque_chose!=FALSE
  truc$=""
  '
  FOR nb_txt%=1 TO 10
    nl1%=INSTR(buffer_sect$,tt$(nb_txt%),0)
    nl2%=INSTR(buffer_sect$,UPPER$(tt$(nb_txt%)),0)
    '
    IF nl1%<>0 OR nl2%<>0
      g_trouve_quelque_chose!=TRUE
      truc$=truc$+" "+tt$(nb_txt%)
    ENDIF
  NEXT nb_txt%
  '
  inverse_off
  PRINT AT(27,23);" "
  '
RETURN
