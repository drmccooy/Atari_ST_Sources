  CLS
  '
  PRINT CHR$(27)+"p";
  IF creator_present!=FALSE
    PRINT " - ASCII HUNTER -  v0.94 Limited demo          31/03/1992, by DAvid DUcassou. "
  ELSE
    PRINT " - ASCII HUNTER -  v1.4 (selled, don't copy!)  31/03/1992, by DAvid DUcassou. "
  ENDIF
  inverse_off
  '
RETURN
> PROCEDURE aff_parametres_2
  IF pos_c%=1
    inverse_on
    PRINT AT(1,2);"Track: ";piste%;" "
    inverse_off
  ELSE
    PRINT AT(1,2);"Track: ";piste%;"  "
  ENDIF
  IF pos_c%=2
    inverse_on
    PRINT AT(11,2);"Sector: ";secteur%;" "
    inverse_off
  ELSE
    PRINT AT(11,2);"Sector: ";secteur%;"  "
  ENDIF
  IF pos_c%=3
    inverse_on
    PRINT AT(23,2);"Side: ";face%;" "
    inverse_off
  ELSE
    PRINT AT(23,2);"Side: ";face%;" "
  ENDIF
  IF pos_c%=4
    inverse_on
    PRINT AT(32,2);"Sectors #: ";sectors_nbr&;" "
    inverse_off
  ELSE
    PRINT AT(32,2);"Sectors #: ";sectors_nbr&;"  "
  ENDIF
  IF pos_c%=5
    inverse_on
    PRINT AT(46,2);"Tracks #: ";tracks_nbr&;" "
    inverse_off
  ELSE
    PRINT AT(46,2);"Tracks #: ";tracks_nbr&;"  "
  ENDIF
  '
RETURN
