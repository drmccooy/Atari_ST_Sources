    BGET #1,V:packed_size$,4
    unpacked_size%=CVL(unpacked_size$)
    sample%=MALLOC(unpacked_size%+1024)
    taille%=unpacked_size%
  ELSE IF header$="ATM5"
    BGET #1,V:unpacked_size$,4
    BGET #1,V:packed_size$,4
    unpacked_size%=CVL(unpacked_size$)
    sample%=MALLOC(unpacked_size%+1024)
    taille%=unpacked_size%
  ENDIF
  CLOSE #1
  '
  packed_size%=CVL(packed_size$)
