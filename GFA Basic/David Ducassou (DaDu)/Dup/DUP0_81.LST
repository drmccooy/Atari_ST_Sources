    IF t%<>8 AND t%<>9 AND t%<>225 AND t%<>162
      GOTO war_in_middle_earth
    ENDIF
  ENDIF
  '
  IF t%=9                       !       TAB
    PUT 0,170,fond_du_txt$
    GOTO war_in_middle_earth
  ENDIF
  '
  IF t%=199                     !       CLR HOME
    SETCOLOR 0,&H666
