> FUNCTION give_path$(path_entire$)
'     by DAVID DUCASSOU, 18/5/91
'
LOCAL path_entire%,c%,c$
'
path_entire%=LEN(path_entire$)
c%=path_entire%+1
'
REPEAT
  DEC c%
  c$=MID$(path_entire$,c%,1)
UNTIL c$="\"
RETURN LEFT$(path_entire$,c%)
ENDFUNC
