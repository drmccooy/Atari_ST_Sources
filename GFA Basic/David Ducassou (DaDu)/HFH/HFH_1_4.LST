> PROCEDURE dir_recherche(f$,prof%)
LOCAL a$,f2$,dta$,adr%,a%
dta$=SPACE$(44)
adr%=V:dta$
~FSETDTA(adr%)
f2$=f$+"\*.*"+CHR$(0)
a%=FSFIRST(f2$,-1)
@affichage
WHILE a%=0
  a%=FSNEXT()
  @affichage
WEND
RETURN
> PROCEDURE affichage
oy%=CRSLIN
IF oy%=25
  dummy%=INP(2)
  CLS
ENDIF
a$=""
FOR i=adr%+30 TO adr%+43
  EXIT IF PEEK(i)<=32
  a$=a$+CHR$(PEEK(i))
  POKE i,32
NEXT i
attribut%=BYTE{FGETDTA()+21}
'     est-ce un fichier ?
IF (PEEK(adr%+21)<>16) AND (a$<>"") AND (a$<>".") AND (a$<>"..")
  IF attribut%=2
    '
    PRINT TAB(5*prof%);CHR$(27)+"p";"  ";a$;
    inverse_off
    '
    INC aff_fic%
  ELSE
    INC nb_fic%
  ENDIF
ENDIF
'     est-ce un dossier ?
IF (PEEK(adr%+21)=16) AND (a$<>"") AND (a$<>".") AND (a$<>"..")
  PRINT TAB(4*prof%);
  OUT 5,7
  OUT 5,32
  PRINT a$
  INC aff%
  @dir_recherche(f$+"\"+a$,prof%+1)
  ~FSETDTA(adr%)
ENDIF
RETURN
